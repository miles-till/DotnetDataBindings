<Window
    x:Class="DotnetDataBinding.Avalonia.Views.MessageBox"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Message Box"
    Width="400"
    Height="250"
    d:DesignHeight="250"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid
        Margin="20"
        ColumnDefinitions="*"
        RowDefinitions="auto,*,auto">
        <Label
            x:Name="Message"
            Grid.Row="0"
            Grid.Column="0"
            Content="Message" />
        <StackPanel
            x:Name="Buttons"
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Right"
            Orientation="Horizontal" />
    </Grid>
</Window>
